<div class="box wide">
  <div class="legend">
    <%= t :CreateAnAccount %>
  </div>

  <%= form_for @new_user, { :url => signup_path } do |f| %>
    <p>
      <%= t :CreateAnAccountExplainer %>
    </p>

    <%= error_messages_for(@new_user) %>

    <% if not Rails.application.open_signups? %>
      <%= hidden_field_tag "invitation_code", @invitation.code %>
      <p>
      <%= f.label :invitation, t("InvitedByLabel"), :class => "required" %>
      <span class="d">
        <a href="/u/<%= @invitation.user.username %>" target="_blank"><%=
          @invitation.user.username %></a>
      </span>
      </p>
    <% end %>

    <p>
    <%= f.label :username, t("UsernameLabel"), :class => "required" %>
    <%= f.text_field :username, :size => 30 %>
    <span class="hint">
      <tt><%= User.username_regex_s %></tt>
    </span>
    <br />

    <%= f.label :email, t("EMailAddressLabel"), :class => "required" %>
    <%= f.email_field :email, :size => 30 %>
    <span class="hint">
      <a href="http://www.gravatar.com/" target="_blank">Gravatar</a>'ized
    </span>
    <br />

    <%= f.label :password, t("PasswordLabel"), :class => "required" %>
    <%= f.password_field :password, :size => 30, :autocomplete => "off" %>
    <br />

    <%= f.label :password_confirmation, t("PasswordAgainLabel"),
      :class => "required" %>
    <%= f.password_field :password_confirmation, :size => 30,
      :autocomplete => "off" %>
    <br />
    </p>

    <p>
      <%= t :TellAboutYourselfSummary %>
    </p>

    <p>
    <div class="boxline">
      <%= f.label :about, t("AboutLabel"), :class => "required" %>
      <%= f.text_area :about, :size => "100x5", :style => "width: 600px;" %>
    </div>

    <div class="box">
      <div class="boxline markdown_help_toggler"
        style="margin-left: 9em; width: 600px;">
        <div class="markdown_help_label">
          <%= t :MarkdownFormattingAvailable %>
        </div>

        <div style="clear: both;"></div>

        <%= render :partial => "global/markdownhelp" %>
      </div>
    </div>

    <p>
    <%= submit_tag t("SignupButton") %>
    </p>
  <% end %>
</div>
