<div class="box wide">
  <div class="legend">
    <%=t :Login %>
  </div>

  <% if Rails.application.read_only? %>
    <p>    
      <%=t :SiteCurrentlyReadOnlyForMaintenance %>
    </p>
  <% else %>
    <%= form_tag login_path do %>
    <p>
      <%= label_tag :email, t("EmailOrUsernameLabel") %>
      <%= text_field_tag :email, "", :size => 30, :autofocus => "autofocus" %>
      <br />

      <%= label_tag :password, t("PasswordLabel") %>
      <%= password_field_tag :password, "", :size => 30 %>
      <br />
      </p>

      <p>
      <%= submit_tag t("Login") %>
      </p>

      <p>
        <%= t :ForgotPasswordOrAccountDeleted %>
        <%= link_to t("ResetPassword"), forgot_password_path %>.
      </p>

      <% if Rails.application.open_signups? %>
        <p>
          <%= raw t :NotAUserSignUp %>
        </p>
      <% else %>
        <p>
          <%= raw t :NotYetAUserInvitation %>
        <% if Rails.application.allow_invitation_requests? %>
          <%= raw t :NotYetAUserInvitationRequest %>
        <% else %>
          <%= raw t :NotYetAUserChatInvitation %>
        <% end %>
        </p>
      <% end %>

      <% if @referer.present? %>
        <%= hidden_field_tag :referer, @referer %>
      <% end %>
    <% end %>
  <% end %>
</div>
